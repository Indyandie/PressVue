// Add you extra styles here
 
body,input,li,ol{
	direction:rtl;
	font-family: Vazir;
}
pre{
	direction:ltr; 
}
a.sidebar-link{
	padding:0.3rem 2rem;
	margin:0.2rem 0;
}
a.sidebar-link.active{
	border-right: 0.25rem solid transparent;
	border-right-color: #179e84;
	border-left:none !important;
	font-weight:bold;
}
ul.sidebar-links>li>a{ 
	border-right:none !important;
}
.sidebar{
	left:auto;
	right:0;
}
.page {
    padding-right: 20rem;
	padding-left:0;
}
.sidebar .sidebar-sub-headers{
    padding-right: 1rem;
	padding-left:0;
}
header.navbar{
 
	.home-link{
		position: absolute;
		right: 4rem;
	}
	.nav-item{
		margin-left:auto;
		margin-right:1.5rem;

	}
	.links{
		left: 1.5rem;
		right:auto;
	}
}
p {
  font-family: Vazir;
  font-size: 13px;
}

.search-box input {
  background-color: #F7FFFD !important;
}
.page-nav{
	direction:ltr;
	a{
		direction: rtl;
    	display: inline-block;
	}
}

.feature p {
  font-size: 20px;
}
.action-button{
	padding: 1rem 6rem !important;
}
code{
	direction:ltr;
	display: inline-block;
}
.custom-block.tip{
	border-right-width: 0.5rem;
	border-right-style: solid;
    border-left-style: none;
}